function graphConstruction(parameter)

% First step: Classification
tic;
miniFwdPass(parameter);
time = toc;
display(['Classification: ' num2str(time/3600) ' hours']);

% Second step: Segmentation
tic;
miniSegmentation(parameter);
time = toc;
display(['Segmentation: ' num2str(time/3600) ' hours']);

% Third step: Graph construction & Filterbank
tic;
miniEdges(parameter);
time = toc;
display(['Graph construction & filterbank: ' num2str(time/3600) ' hours']);

% Fourth step: Border calculation
tic;
miniBorder(parameter);
time = toc;
display(['Border calulation & shape features: ' num2str(time/3600) ' hours']);

% Fifth step: Feature extraction
tic;
miniFeatures(parameter);
time = toc;
display(['Feature extraction: ' num2str(time/3600) ' hours']);

end
